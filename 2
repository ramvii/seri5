#include <stdio.h>
#include <math.h>

int main()
{
    int num1, result = 1;
    printf("enter a number to calc the fact: ");
    scanf("%d", &num1);
    if (num1 < 0)
    {
        printf("enter a valid number");
    }
    else
    {
        for (int i = 0; i < num1; i++)
        {
            result = result * (i + 1);
        }
        printf("The answer is %d", result);
    }
}
